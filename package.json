{
  "name": "mcp-conductor",
  "version": "1.0.0",
  "description": "A Node.js testing library for Model Context Protocol (MCP) servers",
  "main": "src/index.js",
  "bin": {
    "conductor": "./bin/conductor.js"
  },
  "type": "module",
  "scripts": {
    "test": "npm run test:all",
    "test:unit": "node --test test/*.test.js",
    "test:filesystem": "cd examples/filesystem-server && node ../../bin/conductor.js '*.test.mcp.yml' --config './config.json'",
    "test:filesystem:tools": "cd examples/filesystem-server && node ../../bin/conductor.js 'filesystem-tools-only.test.mcp.yml' --config './config.json'",
    "test:filesystem:execution": "cd examples/filesystem-server && node ../../bin/conductor.js 'filesystem-execution-only.test.mcp.yml' --config './config.json'",
    "test:multitool": "cd examples/multi-tool-server && node ../../bin/conductor.js '*.test.mcp.yml' --config './config.json'",
    "test:api-testing": "cd examples/api-testing-server && node ../../bin/conductor.js 'api-testing-super-simple.test.mcp.yml' --config './config.json'",
    "test:examples": "npm run test:filesystem && npm run test:multitool",
    "test:all": "npm run test:unit && npm run test:examples && npm run test:programmatic",
    "test:programmatic": "node --test examples/*/**.programmatic.test.js",
    "test:programmatic:filesystem": "node --test examples/filesystem-server/*.programmatic.test.js",
    "test:programmatic:multitool": "node --test examples/multi-tool-server/*.programmatic.test.js",
    "test:programmatic:api-testing": "node --test examples/api-testing-server/*.programmatic.test.js",
    "dev": "npm run test:examples",
    "github-pages": "cd docs-site && rm -f Gemfile.lock && bundle install --path vendor/bundle && bundle exec jekyll serve --livereload --host=0.0.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "testing",
    "stdio",
    "json-rpc"
  ],
  "author": "Thomas Theunen",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.0",
    "js-yaml": "^4.1.0",
    "chalk": "^5.6.0",
    "jest-diff": "^30.1.2",
    "glob": "^11.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
